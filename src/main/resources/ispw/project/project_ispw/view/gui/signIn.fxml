<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ispw.project.ispw_project.controller.graphic.gui.SignInController">
    <fx:include source="defaultBackHome.fxml" />

    <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20;">
        <Label text="Sign Up" style="-fx-font-size: 24; -fx-font-weight: bold;" /> <TextField fx:id="usernameField" promptText="Username" style="-fx-pref-width: 200;" />

        <PasswordField fx:id="passwordField" promptText="Password" style="-fx-pref-width: 200;" />

        <Label fx:id="errorMessageLabel" text="" textFill="RED" wrapText="true" style="-fx-font-size: 12;" />

        <Button fx:id="signInButton" text="Sign Up" onAction="#handleSignInButtonAction" style="-fx-pref-width: 200; -fx-background-color: #4CAF50; -fx-text-fill: white;" />
    </VBox>
</VBox>